{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Room_date</th>
                <th>Start_time</th>
                <th>End_time</th>
                <th>Location</th>
                <th>Total_chairs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.RoomDate ? room.RoomDate|date('Y-m-d') : '' }}</td>
                <td>{{ room.startTime ? room.startTime|date('Y-m-d') : '' }}</td>
                <td>{{ room.endTime ? room.endTime|date('Y-m-d') : '' }}</td>
                <td>{{ room.location }}</td>
                <td>{{ room.totalChairs }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}
